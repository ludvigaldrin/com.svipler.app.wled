  "platforms": [
    "local"
  ],
  "name": {
    "en": "WLED Controller"
  },
  "description": {
    "en": "Control your WLED devices with Homey"
  },
  "category": [
    "lights"
  ],
  "permissions": [
    "homey:manager:api"
  ],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Ludvig Aldrin",
    "email": "ludvig.aldrin@gmail.com"
  },
